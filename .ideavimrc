vnoremap <Leader>rf :action IntroduceField<CR>
nnoremap <Leader>rp :action IntroduceParameter<CR>
vnoremap <Leader>rp :action IntroduceParameter<CR>
nnoremap <Leader>rm :action ExtractMethod<CR>
vnoremap <Leader>rm :action ExtractMethod<CR>
nnoremap <Leader>ri :action Inline<CR>
nnoremap <Leader>ro :action OptimizeImports<CR>

nnoremap <Leader>cc :action CallHierarchy<CR>
nnoremap <Leader>ds :action QuickJavaDoc<CR>

nnoremap <Leader>un :action GotoNextElementUnderCaretUsage<CR>
nnoremap <Leader>up :action GotoPrevElementUnderCaretUsage<CR>
