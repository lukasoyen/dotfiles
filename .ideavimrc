nnoremap <Leader>br :action ViewBreakpoints<CR>

nnoremap <Leader>en :action GotoNextError<CR>:action ShowErrorDescription<CR>
nnoremap <Leader>ep :action GotoPreviousError<CR>:action ShowErrorDescription<CR>

nnoremap <Leader>fed :e ~/.ideavimrc<CR>
nnoremap <Leader>feR :source ~/.ideavimrc<CR>

nnoremap <Leader>ga :action GotoAction<CR>
nnoremap <Leader>gc :action GotoClass<CR>
nnoremap <Leader>gg :action GotoDeclaration<CR>
