nnoremap <Leader>go :action GotoRelated<CR>
nnoremap <Leader>gb :action Back<CR>
nnoremap <Leader>gf :action Forward<CR>
nnoremap <Leader>gn :action ViewNavigationBar<CR>

nnoremap <Leader>re :action RenameElement<CR>
vnoremap <Leader>re :action RenameElement<CR>
nnoremap <Leader>rF :action RenameFile<CR>
nnoremap <Leader>rv :action IntroduceVariable<CR>
vnoremap <Leader>rv :action IntroduceVariable<CR>
