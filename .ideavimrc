set hlsearch
set ignorecase
set smartcase
set incsearch
set showmode
set wrapscan
set scrolloff=3
set history=100000

let mapleader = " "

" Redo
nnoremap U <C-r>

" Yank to the end of line
nnoremap Y y$

" clear the highlighted search result
nnoremap <Leader>sc :nohlsearch<CR>

" Window operation
nnoremap <Leader>ww <C-W>w
nnoremap <Leader>wd <C-W>c
nnoremap <Leader>ws <C-W>s
nnoremap <Leader>w- <C-W>s
nnoremap <Leader>wv <C-W>v
nnoremap <Leader>wm :action UnsplitAll<CR>

nnoremap <Leader>pf :action GotoFile<CR>
nnoremap <Leader>fr :action RecentFiles<CR>
nnoremap <Leader>ff :action ShowIntentionActions<CR>
nnoremap <Leader>rb :action Tool_External Tools  _black<CR>
nnoremap <Leader>vi :action Tool_External Tools_view_ir<CR>

nnoremap <Leader>ss :action SearchEverywhere<CR>
nnoremap <Leader>/ :action FindInPath<CR>
vnoremap <Leader>/ :action FindInPath<CR>

nnoremap <Leader>cl :action CommentByLineComment<CR>
vnoremap <Leader>cl :action CommentByLineComment<CR>

nnoremap <Leader>bb :action ToggleLineBreakpoint<CR>
